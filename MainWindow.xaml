<Window x:Class="NekoBeats.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NekoBeats Control" Height="500" Width="350"
        WindowStartupLocation="CenterScreen">
    
    <Border Background="#1a1a1a" Padding="20">
        <StackPanel>
            <!-- Header -->
            <TextBlock Text="🎵 NekoBeats" Foreground="#ff6a00" 
                      FontSize="20" FontWeight="Bold" Margin="0,0,0,15"
                      HorizontalAlignment="Center"/>
            
            <!-- Theme Selection -->
            <TextBlock Text="Visual Themes:" Foreground="White" FontSize="14" Margin="0,0,0,10"
                      FontWeight="Bold"/>
            
            <Button Content="🌈 Gradient Bars" Background="#2d2d2d" Foreground="White" 
                    Margin="0,5" Padding="15,8" Click="GradientBars_Click"
                    FontSize="12"/>
            <Button Content="🐾 Purr-ticles" Background="#2d2d2d" Foreground="White" 
                    Margin="0,5" Padding="15,8" Click="Purrticles_Click"
                    FontSize="12"/>
            <Button Content="🎮 Retro Arcade" Background="#2d2d2d" Foreground="White" 
                    Margin="0,5" Padding="15,8" Click="RetroArcade_Click"
                    FontSize="12"/>
            <Button Content="🌌 Space Nebula" Background="#2d2d2d" Foreground="White" 
                    Margin="0,5" Padding="15,8" Click="SpaceNebula_Click"
                    FontSize="12"/>
            
            <!-- Audio Controls -->
            <TextBlock Text="Audio Source:" Foreground="White" FontSize="14" Margin="0,20,0,10"
                      FontWeight="Bold"/>
            <ComboBox x:Name="AudioSourceCombo" Background="#2d2d2d" Foreground="White" 
                     SelectedIndex="0" Padding="10,5" FontSize="12">
                <ComboBoxItem Content="System Audio"/>
                <ComboBoxItem Content="Microphone"/>
            </ComboBox>

            <!-- Sensitivity Control -->
            <TextBlock Text="Sensitivity:" Foreground="White" FontSize="14" Margin="0,20,0,10"
                      FontWeight="Bold"/>
            
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Low" Foreground="Gray" FontSize="11" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <Slider x:Name="SensitivitySlider" Minimum="0.1" Maximum="2.0" Value="1.0" 
                       Width="200" VerticalAlignment="Center"
                       ValueChanged="SensitivitySlider_ValueChanged"/>
                <TextBlock Text="High" Foreground="Gray" FontSize="11" VerticalAlignment="Center" Margin="10,0,0,0"/>
            </StackPanel>
            <TextBlock x:Name="SensitivityValueText" Text="Current: 100%" Foreground="#ff6a00" 
                      FontSize="11" HorizontalAlignment="Center" Margin="0,5,0,10"/>

            <!-- Visualizer Controls -->
            <TextBlock Text="Visualizer Controls:" Foreground="White" FontSize="14" Margin="0,10,0,10"
                      FontWeight="Bold"/>
            
            <Button Content="🎯 Drag Visualizer" Background="#444444" Foreground="White" 
                    Margin="0,5" Padding="15,8" Click="DragVisualizer_Click"
                    FontSize="12"/>
            <Button Content="👁️ Toggle Visibility" Background="#444444" Foreground="White" 
                    Margin="0,5" Padding="15,8" Click="ToggleVisibility_Click"
                    FontSize="12"/>
            <Button Content="🔄 Reset Position" Background="#444444" Foreground="White" 
                    Margin="0,5" Padding="15,8" Click="ResetPosition_Click"
                    FontSize="12"/>

            <!-- Status -->
            <TextBlock x:Name="StatusText" Text="🎵 Audio: Connected" Foreground="#00ff00" 
                      FontSize="11" Margin="0,20,0,0" HorizontalAlignment="Center"/>
        </StackPanel>
    </Border>
</Window>
